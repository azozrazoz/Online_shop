@model ICollection<Online_shop.Models.Categories>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Главная страница</h2>
</div>

<h3>Категории:</h3>

<div class="row" style="display: inline; align-content: center; align-items: center;">
    <ul style="column-count: 4;">
        @foreach (var item in Model)
        {
            <li style="list-style-type:none">
                <div style="margin-bottom: 20px; padding: 15px; border: 2px solid #000000; border-radius: 10px;">
                    <h4>@Html.ActionLink(item.Name, "Index/" + item.Id, "Categories")</h4>
                    <img style="height: 200px" src="@item.PathToPicture" alt="@item.Name" />
                </div>
            </li>
        }
    </ul>
</div>